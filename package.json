{
	"name": "foxes-knowledge",
	"version": "1.0.0",
	"private": true,
	"license": "ISC",
	"author": "Paul Litovka",
	"description": "Website for a Foxes/Knowledge service.",
	"scripts": {
		"prepare": "husky install",
		"start:development": "vite dev",
		"start:production": "vite preview",
		"build": "pnpm typecheck && pnpm lint && vite build",
		"typecheck": "tsc --noEmit -p tsconfig.json",
		"format": "prettier --loglevel warn --write src",
		"lint": "eslint src --quiet --fix --ext js,ts,tsx"
	},
	"dependencies": {
		"react": "^18.1.0",
		"react-dom": "^18.1.0"
	},
	"devDependencies": {
		"@types/node": "^17.0.36",
		"@types/react": "^18.0.9",
		"@types/react-dom": "^18.0.5",
		"@typescript-eslint/eslint-plugin": "^5.26.0",
		"@typescript-eslint/parser": "^5.26.0",
		"@vitejs/plugin-react": "^1.3.2",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.30.0",
		"eslint-plugin-react-hooks": "^4.5.0",
		"husky": "^8.0.1",
		"prettier": "^2.6.2",
		"sass": "^1.52.1",
		"typescript": "^4.7.2",
		"vite": "^2.9.9"
	},
	"lint-staged": {
		"src/**/*.{js,ts,tsx}": [
			"prettier --loglevel warn --write",
			"eslint --quiet --fix"
		],
		"src/**/*.{css,scss}": [
			"prettier --loglevel warn --write"
		]
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://gitlab.nixdev.co/foxes-knowledge/foxes-knowledge.git"
	},
	"bugs": {
		"url": "https://gitlab.nixdev.co/foxes-knowledge/foxes-knowledge/issues"
	},
	"homepage": "https://gitlab.nixdev.co/foxes-knowledge/foxes-knowledge#readme",
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
